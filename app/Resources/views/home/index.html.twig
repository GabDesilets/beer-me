{% extends ':home:layout.html.twig' %}

{% block content %}

    <div class="row">
        <div class="col-lg-4 col-lg-push-8">
            <form method="get">
                <div class="input-group">
                <input type="text" name="search" value="{{ search }}" class="form-control" />
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-primary">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </span>
                </div>
            </form>
        </div>
    </div>

    {% if businesses|length %}
        {% for batch in businesses|batch(businesses|length / 3) %}
        <div class="col-lg-4">
            <ul class="list-unstyled">
                {% for business in batch %}
                    <li><a href="{{ path('user.beers', {'business_id': business.id, 'business_slug': business.name|slugify}) }}">{{ business.name }}</a></li>
                {% endfor %}
            </ul>
        </div>
        {% endfor %}
    {% else %}
        <div class="col-lg-12">
            <p class="text-muted text-center">No result found</p>
        </div>
    {% endif %}

{% endblock %}
