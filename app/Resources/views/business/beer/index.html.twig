{% extends ':business:layout.html.twig' %}

{% block title %}
    {{ 'form.beer.list'|trans }} :: {{ parent() }}
{% endblock %}

{% block content %}
    <div class="box">
        <div class="box-header">
            <div class="row">
                <div class="col-sm-1">
                    <a href="{{ path('business.beer.new') }}" class="btn btn-primary btn-flat">
                        <i class="fa fa-plus"></i> {{ 'form.beer.new'|trans }}
                    </a>
                </div>
            </div>
        </div>
        <div class="box-body no-padding">
            <table class="table table-striped table-condensed table-hover dataTable">
                <thead>
                <tr>
                    <th>{{ 'form.beer.category'|trans }}</th>
                    <th>{{ 'form.beer.name'|trans }}</th>
                    <th>{{ 'form.beer.notes'|trans }}</th>
                    <th>{{ 'form.actions'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for beer in beers %}
                    <tr>
                        <td>{{ beer.category.name }}</td>
                        <td><a href="{{ path('business.beer.show', { 'id': beer.id }) }}">{{ beer.name }}</a></td>
                        <td>{{ beer.notes|nl2br }}</td>
                        <td>
                            <ul class="list-unstyled list-inline">
                                <li>
                                    <a href="{{ path('business.beer.show', { 'id': beer.id }) }}">{{ 'form.show'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('business.beer.edit', { 'id': beer.id }) }}">{{ 'form.edit'|trans }}</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
