{% extends '::base.html.twig' %}

{% block title -%}
    Beer :: {{ parent() }}
{% endblock %}

{% block body %}
    <div class="box">
        <div class="box-header">
            <div class="row">
                <div class="col-sm-12">
                    <table class="record_properties">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ entity.id }}</td>
                            </tr>
                            <tr>
                                <th>Category</th>
                                <td>{{ entity.category.name }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ entity.name }}</td>
                            </tr>
                            <tr>
                                <th>Notes</th>
                                <td>{{ entity.notes|nl2br }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <ul class="record_actions">
                        <li>
                            <a href="{{ path('business.beer.list') }}">
                                Back to the list
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('business.beer.edit', { 'id': entity.id }) }}">
                                Edit
                            </a>
                        </li>
                        <li>
                            <form action="{{ path('business.beer.delete', {'id': entity.id}) }}" method="POST">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn-link">Delete</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
