{% extends ':business:layout.html.twig' %}

{% block title -%}
    {{ 'form.beer'|trans }} :: {{ parent() }}
{% endblock %}

{% block content %}
    <div class="box">
        <div class="box-header">
            <div class="row">
                <div class="col-sm-12">
                    <table class="record_properties">
                        <tbody>
                            <tr>
                                <th>{{ 'form.beer.category'|trans }}</th>
                                <td>{{ entity.category.name }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'form.beer.name'|trans }}</th>
                                <td>{{ entity.name }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'form.beer.notes'|trans }}</th>
                                <td>{{ entity.notes|nl2br }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <ul class="record_actions">
                        <li>
                            <a href="{{ path('business.beer.list') }}">
                                {{ 'form.back-to-list'|trans }}
                            </a>
                        </li>
                        <li>
                            <a href="{{ path('business.beer.edit', { 'id': entity.id }) }}">
                                {{ 'form.edit'|trans }}
                            </a>
                        </li>
                        <li>
                            <form action="{{ path('business.beer.delete', {'id': entity.id}) }}" method="POST">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn-link">{{ 'form.delete'|trans }}</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
