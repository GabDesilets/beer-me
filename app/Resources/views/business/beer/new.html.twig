{% extends ':business:layout.html.twig' %}

{% block title -%}
    Create beer :: {{ parent() }}
{% endblock %}

{% block content %}
    <div class="box">
        <div class="box-body">
            <div class="row">
                {{ form_errors(form) }}
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_start(form) }}
                    {{ form_rest(form) }}
                    <input type="Submit" value="Create" class="btn btn-primary"/>
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="row">
                <ul class="record_actions">
                    <li>
                        <a href="{{ path('business.beer.list') }}">
                            Back to the list
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

{% endblock %}
