{% extends ':business:layout.html.twig' %}

{% block title -%}
    {{ 'form.beer-category.edit'|trans }} :: {{ parent() }}
{% endblock %}

{% block content %}
    <div class="box">
        <div class="box-body">
            <div class="row">
                {{ form_errors(form) }}
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_start(form) }}
                    {{ form_rest(form) }}
                    <input type="Submit" value="{{ 'form.update'|trans }}" class="btn btn-primary"/>
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="row">
                <ul class="record_actions">
                    <li>
                        <a href="{{ path('business.beer-category.list') }}">
                            {{ 'form.back-to-list'|trans }}
                        </a>
                    </li>
                    <li>
                        <form action="{{ path('business.beer-category.delete', {'id': entity.id}) }}" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn-link">{{ 'form.delete'|trans }}</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
