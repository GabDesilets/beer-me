{% extends ':admin:layout.html.twig' %}

{% block content_header -%}
    <h3>Business edit</h3>
{% endblock %}

{% block content %}
    <div class="box">
        <div class="box-body">
            <div class="row">
                {{ form_errors(form) }}
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_start(form) }}
                    {{ form_rest(form) }}
                    <input type="Submit" value="Update" class="btn btn-primary"/>
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="row">
                <ul class="record_actions">
                    <li>
                        <a href="{{ path('admin.business.list') }}">
                            Back to the list
                        </a>
                    </li>
                    <li>
                        <form action="{{ path('admin.business.delete', {'id': entity.id}) }}" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn-link">Delete</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
