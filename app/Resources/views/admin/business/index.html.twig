{% extends ':admin:layout.html.twig' %}

{% block content_header -%}
    <h3>Business list</h3>
{% endblock %}

{% block content %}
    <div class="box">
        <div class="box-body">
            <div class="row">
                <div class="col-sm-1">
                    <a href="{{ path('admin.business.new') }}" class="btn btn-block btn-primary">
                        Create a new entry
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-bordered table-hover dataTable">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Administrator email</th>
                                <th>Address</th>
                                <th>Phone</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td><a href="{{ path('admin.business.show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                <td>{{ entity.name }}</td>
                                <td>{{ entity.administratorUser.email }}</td>
                                <td>{{ entity.address }}</td>
                                <td>{{ entity.phone }}</td>
                                <td>
                                <ul>
                                    <li>
                                        <a href="{{ path('admin.business.show', { 'id': entity.id }) }}">show</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('admin.business.edit', { 'id': entity.id }) }}">edit</a>
                                    </li>
                                </ul>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
