{% extends ':admin:layout.html.twig' %}

{% block content_header -%}
    <h3>Business list</h3>
{% endblock %}

{% block content %}
    <div class="box">
        <div class="box-header">
            <div class="row">
                <div class="col-sm-1">
                    <a href="{{ path('admin.business.new') }}" class="btn btn-primary btn-flat">
                        <i class="fa fa-plus"></i> Create a new business
                    </a>
                </div>
                <div class="col-sm-2 pull-right">
                    <form method="get">
                        <input type="hidden" name="filterField" value="b.name" />
                        <div class="input-group margin">
                            <input type="text" name="filterValue" value="{{ filterValue }}" class="form-control" />
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-flat btn-primary">
                                    <i class="fa fa-search"></i>
                                </button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="box-body no-padding">
            <table class="table table-striped table-condensed table-hover dataTable">
                <thead>
                    <tr>
                        <th>{{ knp_pagination_sortable(pagination, 'Id', 'b.id') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Name', 'b.name') }}</th>
                        <th>Administrator email</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Address', 'b.address') }}</th>
                        <th>{{ knp_pagination_sortable(pagination, 'Phone', 'b.phone') }}</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for business in pagination %}
                    <tr>
                        <td><a href="{{ path('admin.business.show', { 'id': business.id }) }}">{{ business.id }}</a></td>
                        <td>{{ business.name }}</td>
                        <td>{{ business.administratorUser.email }}</td>
                        <td>{{ business.address }}</td>
                        <td>{{ business.phone }}</td>
                        <td>
                        <ul class="list-unstyled list-inline">
                            <li>
                                <a href="{{ path('admin.business.show', { 'id': business.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('admin.business.edit', { 'id': business.id }) }}">edit</a>
                            </li>
                        </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="box-footer">
            <div class="pull-right">
                {{ knp_pagination_render(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}
