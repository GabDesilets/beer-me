<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="app.command_handler.create_business" class="AppBundle\Command\CreateBusinessCommandHandler">
            <argument type="service" id="simple_bus.event_bus.public_event_recorder" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="command_handler" handles="AppBundle\Command\CreateBusinessCommand" />
        </service>

        <service id="app.command_handler.create_business_request"
                 class="AppBundle\Command\CreateBusinessRequestCommandHandler">
            <argument type="service" id="simple_bus.event_bus.public_event_recorder" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="command_handler" handles="AppBundle\Command\CreateBusinessRequestCommand" />
        </service>

        <service id="app.command_handler.create_business_beer_category"
                 class="AppBundle\Command\CreateBusinessBeerCategoryCommandHandler">
            <argument type="service" id="simple_bus.event_bus.public_event_recorder" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="command_handler" handles="AppBundle\Command\CreateBusinessBeerCategoryCommand" />
        </service>

        <service id="app.command_handler.create_business_beer"
                 class="AppBundle\Command\CreateBusinessBeerCommandHandler">
            <argument type="service" id="simple_bus.event_bus.public_event_recorder" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="command_handler" handles="AppBundle\Command\CreateBusinessBeerCommand" />
        </service>


        <service id="app.command_handler.edit_business" class="AppBundle\Command\EditBusinessCommandHandler">
            <argument type="service" id="simple_bus.event_bus.public_event_recorder" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="command_handler" handles="AppBundle\Command\EditBusinessCommand" />
        </service>

        <service id="app.command_handler.edit_business_beer_category"
                 class="AppBundle\Command\EditBusinessBeerCategoryCommandHandler">
            <argument type="service" id="simple_bus.event_bus.public_event_recorder" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="command_handler" handles="AppBundle\Command\EditBusinessBeerCategoryCommand" />
        </service>

        <service id="app.command_handler.edit_business_beer"
                 class="AppBundle\Command\EditBusinessBeerCommandHandler">
            <argument type="service" id="simple_bus.event_bus.public_event_recorder" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="command_handler" handles="AppBundle\Command\EditBusinessBeerCommand" />
        </service>

        <service id="app.command_handler.delete_business" class="AppBundle\Command\DeleteBusinessCommandHandler">
            <argument type="service" id="simple_bus.event_bus.public_event_recorder" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="command_handler" handles="AppBundle\Command\DeleteBusinessCommand" />
        </service>

        <service id="app.command_handler.delete_business_beer_category"
                 class="AppBundle\Command\DeleteBusinessBeerCategoryCommandHandler">
            <argument type="service" id="simple_bus.event_bus.public_event_recorder" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="command_handler" handles="AppBundle\Command\DeleteBusinessBeerCategoryCommand" />
        </service>

        <service id="app.command_handler.delete_business_beer"
                 class="AppBundle\Command\DeleteBusinessBeerCommandHandler">
            <argument type="service" id="simple_bus.event_bus.public_event_recorder" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="command_handler" handles="AppBundle\Command\DeleteBusinessBeerCommand" />
        </service>

        <service id="app.validator.unique_business" class="AppBundle\Validator\Constraints\UniqueBusinessValidator">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="validator.constraint_validator" alias="app.unique_business" />
        </service>

        <service id="app.validator.unique_business_beer_category"
                 class="AppBundle\Validator\Constraints\UniqueBusinessBeerCategoryValidator">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="validator.constraint_validator" alias="app.unique_business_beer_category" />
        </service>

        <service id="app.validator.unique_business_beer"
                 class="AppBundle\Validator\Constraints\UniqueBusinessBeerValidator">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="validator.constraint_validator" alias="app.unique_business_beer" />
        </service>

        <service id="app.event_promises" class="AppBundle\Event\Promise\PromisesEventHandlerMiddleware">
            <tag name="event_bus_middleware" />
        </service>

        <service id="session.business" class="AppBundle\Service\SessionBusinessService">
            <argument type="service" id="security.token_storage" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%business_firewall%</argument>
        </service>

        <service id="app.form.type.beer" class="AppBundle\Form\BusinessBeerType">
            <argument type="service" id="session.business" />
            <tag name="form.type" />
        </service>

        <service id="app.voter.business_owned" class="AppBundle\Security\BusinessOwnedVoter" public="false">
            <argument type="service" id="session.business" />
            <tag name="security.voter" />
        </service>

    </services>

</container>