<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="app.command_handler.create_business"
                 class="AppBundle\Command\Business\CreateBusinessCommandHandler">
            <argument type="service" id="simple_bus.event_bus.public_event_recorder" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="command_handler" handles="AppBundle\Command\Business\CreateBusinessCommand" />
        </service>

        <service id="app.command_handler.create_business_request"
                 class="AppBundle\Command\BusinessRequest\CreateBusinessRequestCommandHandler">
            <argument type="service" id="simple_bus.event_bus.public_event_recorder" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="command_handler" handles="AppBundle\Command\BusinessRequest\CreateBusinessRequestCommand" />
        </service>

        <service id="app.command_handler.create_business_beer_category"
                 class="AppBundle\Command\Business\Beer\Category\CreateBusinessBeerCategoryCommandHandler">
            <argument type="service" id="simple_bus.event_bus.public_event_recorder" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="command_handler"
                 handles="AppBundle\Command\Business\Beer\Category\CreateBusinessBeerCategoryCommand" />
        </service>

        <service id="app.command_handler.create_business_beer"
                 class="AppBundle\Command\Business\Beer\CreateBusinessBeerCommandHandler">
            <argument type="service" id="simple_bus.event_bus.public_event_recorder" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="command_handler" handles="AppBundle\Command\Business\Beer\CreateBusinessBeerCommand" />
        </service>


        <service id="app.command_handler.edit_business" class="AppBundle\Command\Business\EditBusinessCommandHandler">
            <argument type="service" id="simple_bus.event_bus.public_event_recorder" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="command_handler" handles="AppBundle\Command\Business\EditBusinessCommand" />
        </service>

        <service id="app.command_handler.edit_business_beer_category"
                 class="AppBundle\Command\Business\Beer\Category\EditBusinessBeerCategoryCommandHandler">
            <argument type="service" id="simple_bus.event_bus.public_event_recorder" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="command_handler"
                 handles="AppBundle\Command\Business\Beer\CategoryEditBusinessBeerCategoryCommand" />
        </service>

        <service id="app.command_handler.edit_business_beer"
                 class="AppBundle\Command\Business\Beer\EditBusinessBeerCommandHandler">
            <argument type="service" id="simple_bus.event_bus.public_event_recorder" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="command_handler" handles="AppBundle\Command\Business\Beer\EditBusinessBeerCommand" />
        </service>

        <service id="app.command_handler.delete_business"
                 class="AppBundle\Command\Business\DeleteBusinessCommandHandler">
            <argument type="service" id="simple_bus.event_bus.public_event_recorder" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="command_handler" handles="AppBundle\Command\Business\DeleteBusinessCommand" />
        </service>

        <service id="app.command_handler.delete_business_beer_category"
                 class="AppBundle\Command\Business\Beer\Category\DeleteBusinessBeerCategoryCommandHandler">
            <argument type="service" id="simple_bus.event_bus.public_event_recorder" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="command_handler"
                 handles="AppBundle\Command\Business\Beer\Category\DeleteBusinessBeerCategoryCommand" />
        </service>

        <service id="app.command_handler.delete_business_beer"
                 class="AppBundle\Command\Business\Beer\DeleteBusinessBeerCommandHandler">
            <argument type="service" id="simple_bus.event_bus.public_event_recorder" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="command_handler" handles="AppBundle\Command\Business\Beer\DeleteBusinessBeerCommand" />
        </service>

        <service id="app.validator.unique_business" class="AppBundle\Validator\Constraints\UniqueBusinessValidator">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="validator.constraint_validator" alias="app.unique_business" />
        </service>

        <service id="app.command_handler.delete_business_request"
                 class="AppBundle\Command\BusinessRequest\DeleteBusinessRequestCommandHandler">
            <argument type="service" id="simple_bus.event_bus.public_event_recorder" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="command_handler" handles="AppBundle\Command\BusinessRequest\DeleteBusinessRequestCommand" />
        </service>

        <service id="app.command_handler.accept_business_request"
                 class="AppBundle\Command\BusinessRequest\AcceptBusinessRequestCommandHandler">
            <argument type="service" id="simple_bus.event_bus.public_event_recorder" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="command_bus" />
            <tag name="command_handler" handles="AppBundle\Command\BusinessRequest\AcceptBusinessRequestCommand" />
        </service>

        <service id="app.validator.unique_business_beer_category"
                 class="AppBundle\Validator\Constraints\UniqueBusinessBeerCategoryValidator">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="validator.constraint_validator" alias="app.unique_business_beer_category" />
        </service>

        <service id="app.validator.unique_business_beer"
                 class="AppBundle\Validator\Constraints\UniqueBusinessBeerValidator">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="validator.constraint_validator" alias="app.unique_business_beer" />
        </service>

        <service id="app.event_promises" class="AppBundle\Event\Promise\PromisesEventHandlerMiddleware">
            <tag name="event_bus_middleware" />
        </service>

        <service id="session.business" class="AppBundle\Service\SessionBusinessService">
            <argument type="service" id="security.token_storage" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%business_firewall%</argument>
        </service>

        <service id="app.form.type.beer" class="AppBundle\Form\BusinessBeerType">
            <argument type="service" id="session.business" />
            <tag name="form.type" />
        </service>

        <service id="app.voter.business_owned" class="AppBundle\Security\BusinessOwnedVoter" public="false">
            <argument type="service" id="session.business" />
            <tag name="security.voter" />
        </service>

    </services>

</container>